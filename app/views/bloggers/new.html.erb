<h3>Create New Blogger</h3>

<% if flash[:my_errors] %>
    <ul><% flash[:my_errors].each do |error|%>
        <li><%= error %></li>
    <%end%></ul>
<%end%>

<%= form_for @blogger do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>
    <br>
    <br>
    <%= f.label :bio%>
    <%= f.text_field :bio%>
    <br>
    <br>
    <%= f.label :age%>
    <%= f.number_field :age%>
    <br>
    <br>
    <%= f.submit %>
<% end %>